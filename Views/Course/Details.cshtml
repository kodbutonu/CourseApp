@model Course

<div class="row">
    <div class="card mb-3" id="@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" alt="@Model.Title" class="img-fluid rounded-start" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="/course/details/@Model.Id">
                 <h5>@Model.Title</h2>
                 </a>
                <p>@Model.Description</p>
                <div>
                    @if(Model.Tags !=null){
                     @foreach(var tag in Model.Tags){
                        <span class="badge bg-primary">@tag</span>
                    }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>

