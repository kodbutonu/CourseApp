@model Course

<div class="card mb-3" id="@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" alt="@Model.Title" width="200" class="img-fluid rounded-start" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a href="/course/details/@Model.Id">
                 <h2>@Model.Title</h2>
                 </a>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>